/* 热门推荐 */
.hot-commend-tit, 
.commend-list-box{
  padding: 0 30rpx;
}
.hot-commend-tit{
	font-size: 34rpx;
}
.hot-commend-tit .tit{
	/*margin: 0 10rpx;*/
  display: block;
  position: relative;
  overflow: hidden;
  height: 50rpx;
}
.hot-commend-tit .tit:before{
	display: block;
	content: '';
	background: #d1d1d1;
	vertical-align: middle;
	height: 2rpx;
  width: 100%;
  margin-top: 25rpx;
}
.hot-commend-tit .tit:after{
  display: block;
  content: '热门推荐';
  position: absolute;
  top: 0;
  left: 30rpx;
  background: #fff;
  padding: 0 20rpx;
}

.commend-list-box{
  overflow: hidden;
  margin-right: -3.33%;
}
.commend-list-box .list-item{
  float: left;
  width: 30%;
  text-align: center;
  margin-right: 3.33%;
}
.commend-list-box .commend-img{
  width: 100%;
  height: 100rpx;
}





